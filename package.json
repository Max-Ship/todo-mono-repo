{
  "name": "todo-monorep",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:react": "vite --config apps/react-app/vite.config.js",
    "dev:vue": "vite --config apps/vue-app/vite.config.js",
    "dev:vanilla": "vite --config apps/vanilla-app/vite.config.js",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:vue\" \"npm run dev:vanilla\""
  },
  "devDependencies": {
    "concurrently": "^8.0.1"
  }
}
